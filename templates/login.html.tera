<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="static/css/browser_reset.css" media="screen" />
    <style type="text/css" media="screen">
      body {
          font-family: Sans-Serif;
          background-color: #DFD;
          margin: 0 auto;
          max-width: 450px;
      }

      h1 {
          margin: 70px 0;
          text-align: center;
          font-size: 4em;
      }

      input {
          display: block;
          font-size: 16px;
          width: 100%;
      }
    </style>
  </head>
  <body>
    <h1>Live Ad</h1>
    <form action="/login" method="post">
      <input name="username"
             placeholder="Username"
             required="required"
             type="text">
      <input name="password"
             placeholder="Password"
             type="text">
      <input type="submit"
             value="Login">
    </form>
  </body>
</html>
